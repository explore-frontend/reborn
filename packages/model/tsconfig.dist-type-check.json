        "lib": ["esnext"],
        "useDefineForClassFields": false,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "noEmit": true,
        "verbatimModuleSyntax": false
    },
    "include": ["./dist-type-check/**/*"],
}
