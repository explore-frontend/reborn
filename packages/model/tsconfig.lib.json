{
    "extends": "@kwai-explore/tsconfig",
    "compilerOptions": {
        "lib": ["esnext", "dom"],
        "rootDir": "./src",
        "useDefineForClassFields": false,
        "experimentalDecorators": true,
        "noEmit": true,
        "paths": {
            "vue-demi": ["./node_modules/vue"]
        }
    },
    "exclude": ["./src/**/__test__/**/*", "./src/**/*.spec.ts"],
    "include": ["./src/**/*"]
}
