{
    "extends": "@kwai-explore/tsconfig",
    "compilerOptions": {
        "lib": ["esnext", "dom"],
        "rootDir": "./src",
        "useDefineForClassFields": false,
        "experimentalDecorators": true,
        "noEmit": true,
        "paths": {
            "@vue/composition-api": ["./node_modules/@vue/composition-api/dist/index.d.ts"],
            "vue/types/vue": ["./node_modules/vue/types/vue.d.ts"]
        }
    },
    "exclude": ["./src/**/__test__/**/*", "./src/**/*.spec.ts"],
    "include": ["./src/**/*"]
}
